<% if user_signed_in? %>
  <head>
    <style>
        /* Add this style to change the color of the table stripes */
        table.striped > tbody > tr:nth-child(odd) {
            background-color: royalblue;
        }

        table.highlight > tbody > tr:hover {
            background-color: steelblue;
        }

        table.bordered {
            border: 1px solid grey;
        }

        th {
            border-radius: 0;
        }
    </style>
  </head>
  <p style="color: green"><%= notice %></p>
  <p id="notice"><%= notice %></p>
  <h1>Friends</h1>

  <table class="table-of-contents highlight centered responsive-table striped bordered">
    <thead id="heads" class="black darken-4 white-text">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Social Media</th>
      <th>User ID</th>
      <!--      <th colspan="3"></th>-->
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody id="friends">
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
          <td>
            <%= link_to friend.first_name + " " + friend.last_name, friend, style: "color : black;" %>
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.social_media %></td>
          <td><%= friend.user_id %></td>
          <td colspan="1">
            <%#= link_to "Show", friend, style: "color : black;" %>
            <%#= link_to "Edit", edit_friend_path(friend), style: "color : black;" %>
            <%= link_to @friend, method: :delete, remote: true, data: { confirm: "Are you sure?" }, class: "btn-floating btn-large waves-effect waves-light" do %>
              <i class="material-icons">delete</i>
            <% end %>

          </td>
        </tr>
      <% end %>
    <% end %>
    </tbody>

  </table>
  <br>
  <%= link_to "New friend", new_friend_path, class: "waves-effect waves-light btn" %>
<% else %>

<% end %>